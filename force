<!DOCTYPE html>
<html>
  <head>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <style>
      .node {
        stroke: #fff;
        stroke-width: 1.5px;
      }
    </style>
  </head>
  <body>
    <svg width="600" height="600"></svg>
    <script>
      // SVG dimensions
      const width = 600;
      const height = 600;

      // Example dataset
      const nodes = d3.range(100).map(function(d) {
        return { radius: Math.random() * 25 + 5 };
      });

      // Create SVG
      const svg = d3.select("svg");

      // Create the simulation with forces
      const simulation = d3.forceSimulation(nodes)
        .force("charge", d3.forceManyBody().strength(5))
        .force("center", d3.forceCenter(width / 2, height / 2))
        .force("collide", d3.forceCollide().radius(d => d.radius + 2).iterations(1))
        .on("tick", ticked);

      // Create circles (nodes) in the SVG
      const circle = svg.selectAll("circle")
        .data(nodes)
        .enter().append("circle")
        .attr("r", d => d.radius)
        .attr("fill", "steelblue")
        .attr("class", "node");

      // Update the positions of nodes on every tick
      function ticked() {
        circle
          .attr("cx", d => d.x)
          .attr("cy", d => d.y);
      }
    </script>
  </body>
</html>
